{
    "name" : "stampie/stampie",
    "description" : "Stampie is a simple API Wrapper for different email providers such as Postmark, SendGrid, Mailgun, Mandrill.",
    "homepage" : "https://github.com/Stampie/Stampie",
    "type" : "library",
    "license" : "MIT",
    "keywords": [
        "postmark",
        "sendgrid",
        "mailgun",
        "mandrill",
        "adapter",
        "wrapper"
    ],
    "authors" : [
        {
            "name" : "Henrik Bjornskov",
            "email" : "henrik@bjrnskov.dk",
            "homepage" : "http://henrik.bjrnskov.dk"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "Stampie\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stampie\\Tests\\": "tests/Stampie/Tests"
        }
    },
    "require" : {
        "php"                               : "^7.2",
        "php-http/httplug"                  : "^1.0 || ^2",
        "php-http/message-factory"          : "^1.0",
        "php-http/discovery"                : "^1.0",
        "php-http/multipart-stream-builder" : "^1.0",
        "php-http/client-implementation"    : "^1.0"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^6.5.14",
        "php-http/message" : "^1.0",
        "guzzlehttp/psr7" : "^1.3",
        "php-http/mock-client" : "^1.0"
    },
    "conflict": {
        "sebastian/comparator": "<1.2.4"
    },
    "replace": {
        "henrikbjorn/stampie": "self.version"
    },
    "suggest" : {
        "stampie/extra" : "Extensions for Stampie"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
