{
    "name" : "stampie/stampie",
    "description" : "Stampie is a simple API Wrapper for different email providers such as Postmark, SendGrid, Mailgun, Mandrill.",
    "homepage" : "https://github.com/Stampie/Stampie",
    "type" : "library",
    "license" : "MIT",
    "keywords": [
        "postmark",
        "sendgrid",
        "mailgun",
        "mandrill",
        "adapter",
        "wrapper"
    ],
    "authors" : [
        {
            "name" : "Henrik Bjornskov",
            "email" : "henrik@bjrnskov.dk",
            "homepage" : "http://henrik.bjrnskov.dk"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "Stampie\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stampie\\Tests\\": "tests/Stampie/Tests"
        }
    },
    "require" : {
        "php": "^7.4 || ^8.0",
        "php-http/discovery": "^1.8",
        "php-http/multipart-stream-builder": "^1.1",
        "psr/http-client": "^1.0.1",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "symfony/deprecation-contracts": "^2.4 || ^3.0"
    },
    "require-dev" : {
        "ext-json": "*",
        "guzzlehttp/psr7": "^2.0",
        "php-http/mock-client": "^1.0",
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.5.20"
    },
    "conflict": {
        "php-http/httplug": "<2",
        "sebastian/comparator": "<1.2.4"
    },
    "replace": {
        "henrikbjorn/stampie": "self.version"
    },
    "suggest" : {
        "stampie/extra" : "Extensions for Stampie"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
